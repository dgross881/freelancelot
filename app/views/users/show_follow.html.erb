<%= provide(:title, @title) %>
<div class="row">
  <aside class="col-lg-4">
    <section>
       <%= image_tag(@user.avatar.url(:medium)) %>
       <h3> <%= @user.name %></h3>
       <span> <%= link_to "view my profile", @user %></span> 
       <span><b>Microposts: </b> <%= @user.microposts.count %></span>
     </section> 
     <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= image_tag(@user.avatar.url(:xsmall)) %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-lg-8">
    <h3><%= @title %></h3>
     <% if @users.any? %>
      <ul class="users">
       <%= render 'user_follow' %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
</div>
